@model _9kcars.Entities.Veiculo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Veiculo</h4>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                
                <!-- Detalhes do veículo -->

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Marca)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Marca)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Modelo)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Modelo)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Ano)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Ano)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Categoria)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Categoria)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cor)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cor)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Valor)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Valor)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Placa)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Placa)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Disponibilidade)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Disponibilidade)
                    </dd>
                    <p>OBS: O Preço(Valor) refere-se Valor da diária do Automóvel</p>
                </dl>
                
            </div>

            <div class="col-md-4">
                @if (Model.FotoUrl != null)
                {
                    <img src="@Model.FotoUrl" alt="Foto do veículo" class="img-fluid" />
                }
                else
                {
                    <p>Imagem não disponível</p>
                }
            </div>
            <hr />
        </div>
    </div>
    <p>

    

    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.VeiculoId">Editar</a> |
    <a asp-action="Index">Voltar para Lista Completa</a>
</div>
